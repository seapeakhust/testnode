#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('exp:server');
var http = require('http');
var config = require('../config.json');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}

/**
 * @param  {[type]}
 * @param  {[type]}
 * @param  {[type]}
 * @return {[type]}
 */
function testForTest(env, param1, param2) {

}

var promises = [];

var promise1 = new Promise(function (resolve, reject) {
  setTimeout(function () {
    //resolve('promise1');
    reject('promise1 reject');
  }, 2000);
});
promises.push(promise1);

var promise2 = new Promise(function (resolve, reject) {
  setTimeout(function () {
    resolve('promise2');
  }, 4000);
});
promises.push(promise2);

Promise.all([promise1, promise2]).then(function (values) {
  console.log(values);
}).catch(function(reject) {
  console.log(reject);
});

[1,2,3].forEach(function (element) {
  promises[0].then(function(value) {
    console.log(element + value);
  }, function(reject) {
    console.log(element + reject);
  })
});

[4,5,6].forEach(function (element) {
  promises[1].then(function(value) {
    console.log(element + value);
  }, function(reject) {
    console.log(element + reject);
  })
});